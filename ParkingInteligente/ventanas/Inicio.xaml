<Page xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:ParkingInteligente.ventanas"
      xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
      x:Class="ParkingInteligente.ventanas.Inicio"
      mc:Ignorable="d"
      d:DesignHeight="450"
      d:DesignWidth="800"
      Title="Inicio">
    <Page.Background>
        <LinearGradientBrush EndPoint="0.5,1"
                             StartPoint="0.5,0">
            <GradientStop Color="#FFACACAC"
                          Offset="0.203" />
            <GradientStop Color="#FF636363"
                          Offset="1" />
        </LinearGradientBrush>
    </Page.Background>

    <DockPanel LastChildFill="True">
        <StackPanel DockPanel.Dock="Right">
            <TextBlock  x:Name="FechaTextBlock"
                        Text="Martes 26-Enero-2022"
                        HorizontalAlignment="Right"
                        Margin="5"
                        Foreground="Black"
                        FontWeight="Bold"
                        FontFamily="Source Sans Pro Black"
                        FontSize="14" />

            <TextBox x:Name="NotasTextBox"
                     Height="400"
                     Width="250"
                     Margin="3" />

            <TextBlock Text="© Copyright Licensed"
                       HorizontalAlignment="Right"
                       FontWeight="Bold"
                       FontFamily="Source Sans Pro Black"
                       Foreground="Black" />
        </StackPanel>
        
        <DockPanel DockPanel.Dock="Left"
                   LastChildFill="False">
            
            <Border DockPanel.Dock="Top">
                <Image Source="/assets/IconoEmpresa.jpg"
                       HorizontalAlignment="Left"
                       Width="150"
                       Height="150"
                       Margin="10">
                </Image>
                <Border.Effect>
                    <DropShadowEffect />
                </Border.Effect>
            </Border>
            <TextBlock Text="Gráficas"
                       DockPanel.Dock="Left"
                       VerticalAlignment="Center" />
        </DockPanel>

    </DockPanel>
</Page>
