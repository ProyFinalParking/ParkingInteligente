<Page x:Class="ParkingInteligente.ventanas.Inicio"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:ParkingInteligente.ventanas"
      mc:Ignorable="d"
      d:DesignHeight="450"
      d:DesignWidth="800"
      Title="Inicio"
      Background="White">

    <DockPanel LastChildFill="True">
        <StackPanel DockPanel.Dock="Right">
            <TextBlock  x:Name="FechaTextBlock"
                        Text="Martes 26-Enero-2022"
                        HorizontalAlignment="Right"
                        Margin="5" />

            <TextBox x:Name="NotasTextBox"
                     Height="400"
                     Width="250"
                     Margin="3" />

            <TextBlock Text="© Copyright Licensed"
                       HorizontalAlignment="Right" />
        </StackPanel>
        <DockPanel DockPanel.Dock="Left"
                   LastChildFill="False">

            <Image Source="/assets/IconoEmpresa.jpg"
                   DockPanel.Dock="Top"
                   HorizontalAlignment="Left"
                   Width="150"
                   Height="150" 
                   Margin="10"/>

            <TextBlock Text="Sesión Iniciada a las 10:27"
                       HorizontalAlignment="Left"
                       DockPanel.Dock="Bottom" 
                       x:Name="SesionTextBlock"/>
            <TextBlock Text="Gráficas"
                       DockPanel.Dock="Left" 
                       VerticalAlignment="Center"/>
        </DockPanel>

    </DockPanel>
</Page>
